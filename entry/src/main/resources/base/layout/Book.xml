<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFB0E0E6"
    ohos:orientation="vertical"
    >
    <DirectionalLayout
        ohos:height="match_content"
        ohos:alignment="left"
        ohos:orientation="horizontal"
        ohos:background_element="#FF808A87"
        ohos:width="match_parent">
        <Button
            ohos:left_margin="20vp"
            ohos:id="$+id:return1"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="30vp"
            ohos:text_alignment="center"
            ohos:layout_alignment="center"
            ohos:text="â—€"/>

        <TabList
            ohos:id="$+id:tab_list1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_size="30vp"
            ohos:layout_alignment="horizontal_center"
            ohos:orientation="horizontal"
            ohos:text_alignment="center"
            ohos:tab_length="100vp"
            ohos:normal_text_color="black"
            ohos:selected_text_color="#2138FD"
            ohos:tab_indicator_type="bottom_line"
            ohos:selected_tab_indicator_color="#2138FD"
            ohos:selected_tab_indicator_height="4vp"
            ohos:left_margin="60vp"
            />
    </DirectionalLayout>
    <PageSlider
        ohos:id="$+id:slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center"/>

</DirectionalLayout>