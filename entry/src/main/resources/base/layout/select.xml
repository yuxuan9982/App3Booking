<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:alignment="left"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content">
        <Text
            ohos:id="$+id:s_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="年份（不填默认全集）："
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_year"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_year_l"
            ohos:hint="1977"/>
        <Button
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:id="$+id:s_line1"
            ohos:right_of="$id:s_year_l"
            ohos:text="-"
            ohos:text_size="20vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_line1"

            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_year_r"
            ohos:hint="2023"/>
    </DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content">
        <Text
            ohos:id="$+id:s_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="月份（不填默认全集）："
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_month"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_month_l"
            ohos:hint="1"/>
        <Button
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:id="$+id:s_line2"
            ohos:right_of="$id:s_month_l"
            ohos:text="-"
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_line2"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_month_r"
            ohos:hint="12"/>
    </DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content">
        <Text
            ohos:id="$+id:s_week"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="周（不填默认全集）："
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_week"
            ohos:id="$+id:s_week_l"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:hint="1"/>
        <Button
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:id="$+id:s_line3"
            ohos:right_of="$id:s_week_l"
            ohos:text="-"
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_line3"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_week_r"
            ohos:hint="5"/>
    </DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content">
        <Text
            ohos:id="$+id:s_money"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="金额（不填默认全集）："
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_money"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:id="$+id:s_money_l"
            ohos:hint="0"/>
        <Button
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:id="$+id:s_line4"
            ohos:right_of="$id:s_money_l"
            ohos:text="-"
            ohos:text_size="20vp"/>
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="20vp"
            ohos:right_of="$id:s_line4"
            ohos:id="$+id:s_money_r"
            ohos:background_element="$graphic:normal_shape"
            ohos:padding="2vp"
            ohos:hint="9999999"/>
    </DependentLayout>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="返回"
            ohos:text_size="20vp"
            ohos:align_parent_left="true"
            ohos:left_margin="20vp"
            ohos:id="$+id:s_ret"/>
        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="确认"
            ohos:text_size="20vp"
            ohos:align_parent_right="true"
            ohos:right_margin="20vp"
            ohos:id="$+id:s_confirm"/>
    </DependentLayout>
</DirectionalLayout>